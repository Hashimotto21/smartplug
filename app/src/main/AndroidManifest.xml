<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a2140252.smartplug">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".TopActivity"></activity>
        <activity android:name=".UserAddActivity"></activity>
        <activity android:name=".PlugAddActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".HomeActivity">

        </activity>

        <activity android:name=".TimerActivity"></activity>
        <activity android:name=".ConfigActivity"></activity>

        <activity android:name=".UserConfigActivity"
            android:parentActivityName=".HomeActivity"></activity>
        <activity android:name=".PlugAddMoreActivity"
            android:parentActivityName=".HomeActivity"></activity>
        <activity android:name=".PlugDeleteActivity"
            android:parentActivityName=".HomeActivity"></activity>
        <activity android:name=".LogoutActivity"
            android:parentActivityName=".HomeActivity"></activity>

        <activity android:name=".ChangePasswordActivity"
            android:parentActivityName=".UserConfigActivity"></activity>

    </application>

</manifest>